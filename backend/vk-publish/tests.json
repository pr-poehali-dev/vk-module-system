    {
      "name": "Test POST with valid structure",
      "method": "POST",
      "path": "/",
      "body": {
        "token": "test_token",
        "groups": [{"groupId": "123", "name": "Test Group"}],
        "posts": [{"text": "Test post", "image": ""}]
      },
      "expectedStatus": 200,
      "expectedBody": {
        "results": "array",
        "total": "number"
